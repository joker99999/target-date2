.signup
  .topsignup-text
    Signup
  .signup-box
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .signup-box-text
        .signup-box-text1
          = f.label :username
          %br/
          = f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "ユーザーネーム"
        .signup-box-text1
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .signup-box-text1
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"
        .signup-box-text1
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再入力"
        .signup-btn
          = f.submit "Sign up"


