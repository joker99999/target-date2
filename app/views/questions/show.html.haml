= render 'targets/headcontent'
.maincontent
  = render 'targets/leftcontent'
  .question-show
    .question-show-content
      質問内容：
      =@question.title
      .question-container
        = form_with(model: [@question, @questioncomment], local: true) do |f|
          = f.text_area :text, placeholder: "コメントする"
          = f.submit "投稿する"
      .question-comments
        %h4 ＜コメント一覧＞
        - @questioncomments.each do |c|
          %ul
            %li
            = c.user.username 
            = c.text
